@import cart
$background-color = #ededed
$base-font-size = calc(8px + .5vw)

html
    font-size: $base-font-size

body 
    background-color: $background-color
    position: relative
    min-height: 100vh

main
    padding-bottom: 15vh

.product-title
    text-transform: uppercase
    letter-spacing: .2em

.product-description
    text-transform: uppercase

.product-text
    padding-right: 20px

.nav-item
    a
        height:100%

.errorList a
    color: red
    font-weight: bold

footer
    position: absolute
    bottom: 0
    width: 100%
    